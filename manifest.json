{
  "manifest_version": 3,
  "name": "Fix Gemini Parser",
  "version": "4.1",
  "description": "Enhance your Google Gemini experience with proper markdown and LaTeX rendering.",
  "permissions": ["storage"],
  "icons": {
    "16": "app.png",
    "32": "app.png",
    "48": "app.png",
    "128": "app.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fix Parser Settings",
    "default_icon": "app.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "lib/katex.min.js",
        "content.js"
      ],
      "css": ["lib/katex.min.css"]
    }
  ]
}